{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "extends": "standard",
  "env": {
    "node": true,
    "es6": true
  },
  rules: {
    "semi": 0,
    "space-before-function-paren": 0,
    "jsx-quotes": [2, "prefer-double"],
    "strict": 0,
    "arrow-parens": [2, "as-needed"],
    "generator-star-spacing": ["error", {"before": true, "after": false}],
    "disallowSpacesInAnonymousFunctionExpression": 0
  },
  "plugins": ["standard", "react"]
}
